{
    "name": "Minute Master",
    "version": "1.0.0",
    "description": "Effortlessly capture, organize, and share meeting minutes",
    "manifest_version": 3,
    "author": "Arpit Dave",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },    
    "action":{
        "default_popup": "index.html",
        "default_title": "Minute Master",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "./js/background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "audioCapture"
    ]    
}