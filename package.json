{
  "name": "autodoc",
  "displayName": "AutoDoc",
  "description": "A VS Code extension to auto-generate docstrings using Gemini Pro API",
  "version": "0.0.1",
  "publisher": "arpit-dave",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.setDocstringFormat",
    "onCommand:extension.generateDocstring"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.setDocstringFormat",
        "title": "Set Docstring Format"
      },
      {
        "command": "extension.generateDocstring",
        "title": "Generate Docstring"
      }
    ],
    "configuration": {
      "properties": {
        "autoDoc.docstringFormat": {
          "type": "string",
          "default": "Google",
          "description": "Default format for generated docstrings",
          "enum": [
            "Google",
            "NumPy",
            "Sphinx"
          ]
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "extension.generateDocstring",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "typescript": "^5.6.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@google/generative-ai": "^0.19.0",
    "axios": "^1.7.7"
  }
}
